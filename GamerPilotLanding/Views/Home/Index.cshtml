<section  id="subscribe">
    <div class="row">
        <div class="col-md-12 nopadding">
            <div class="stripe">

                <div class="row">
                    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
                        <h3>Få at vide når vi lancerer! (Spamfri)</h3>
                        <form asp-controller="Home" asp-action="Subscribe" method="post" class="form-inline" asp-route-returnUrl="Index">
                            <input type="email" name="email" placeholder="Din Email" class="subscribe_input" required/>
                            <input type="submit" class="button havelock subscribe_btn" value="Skriv op"/>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

  
